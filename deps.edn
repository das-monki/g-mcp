{:paths ["src" "resources"]
 :deps {org.clojure/clojure {:mvn/version "1.12.1"}
        org.clojure/data.json {:mvn/version "2.5.1"}
        org.clojure/core.async {:mvn/version "1.8.741"}
        modex/modex {:git/url "https://github.com/theronic/modex.git"
                     :sha "1b3faf910276c4e056a65c5572f3d9d159bb69c0"}}
 :aliases
 {:test {:extra-paths ["test"]
         :extra-deps {org.clojure/test.check {:mvn/version "1.1.1"}
                      lambdaisland/kaocha {:mvn/version "1.87.1366"}}}
  :build {:deps {io.github.clojure/tools.build {:mvn/version "0.10.7"}}
          :ns-default build}
  :run {:main-opts ["-m" "g-mcp.core"]}
  :outdated {:replace-deps {olical/depot {:mvn/version "2.4.1"}}
             :main-opts ["-m" "depot.outdated.main"]}

  ;; nREPL server for AI to connect to
  :nrepl {:extra-deps {nrepl/nrepl {:mvn/version "1.3.1"}
                       ch.qos.logback/logback-classic {:mvn/version "1.5.18"}}
          :jvm-opts ["-Djdk.attach.allowAttachSelf"]
          :main-opts ["-m" "nrepl.cmdline" "--port" "7888"]}}}